{
  "name": "doewe-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "npm run lint -ws",
    "typecheck": "npm run typecheck -ws",
    "test": "npm run test -ws",
    "build": "npm run build -ws",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "dev:web": "npm --workspace @doewe/web run dev"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
